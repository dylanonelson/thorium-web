{
  "name": "@edrlab/thorium-web",
  "description": "Play with the capabilities of the Readium Web toolkit",
  "keywords": [
    "edrlab",
    "thorium",
    "demo",
    "toolkit",
    "web reader"
  ],
  "license": "BSD-3-Clause",
  "version": "0.10.0",
  "private": false,
  "files": [
    "./dist"
  ],
  "exports": {
    "./components": "./dist/packages/Components/index.js",
    "./components/*": "./dist/packages/Components/*.js",
    "./helpers": "./dist/packages/Helpers/index.js",
    "./helpers/*": "./dist/packages/Helpers/*.js",
    "./hooks": "./dist//packages/Hooks/index.js",
    "./hooks/*": "./dist/packages/Hooks/*.js",
    "./lib": "./dist/lib/index.js",
    "./lib/*": "./dist/lib/*.js",
    "./preferences": "./dist/preferences/index.js",
    "./preferences/*": "./dist/preferences/*.js",
    "./statefulComponents": "./dist/components/index.js",
    "./statefulComponents/*": "./dist/components/*.js"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:all": "pnpm run build:submodules && next build",
    "build:submodules": "pnpm run build:shared && pnpm run build:navigator",
    "build:shared": "cd ./src/readium/ts-toolkit/shared && pnpm run build",
    "build:navigator": "pnpm run build:injectables && cd ./src/readium/ts-toolkit/navigator && pnpm run build",
    "build:injectables": "cd ./src/readium/ts-toolkit/navigator-html-injectables && pnpm run build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "npx @cloudflare/next-on-pages && npx wrangler pages deploy",
    "preinstall": "npx only-allow pnpm && cd ./src/readium/ts-toolkit && pnpm install",
    "postinstall": "pnpm run build:submodules",
    "bundle": "tsup --config tsup.config.ts"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": ">=2.6.0",
    "motion": ">=12.4.0",
    "react": ">=19.0.0",
    "react-aria": ">=3.38.0",
    "react-aria-components": ">=1.7.0",
    "react-dom": ">=19.0.0",
    "react-modal-sheet": ">=4.4.0",
    "react-redux": ">=9.2.0",
    "react-resizable-panels": ">=3.0.0",
    "react-stately": ">=3.36.0"
  },
  "dependencies": {
    "@readium/navigator": "link:src/readium/ts-toolkit/navigator",
    "@readium/navigator-html-injectables": "link:src/readium/ts-toolkit/navigator-html-injectables",
    "@readium/shared": "link:src/readium/ts-toolkit/shared",
    "@reduxjs/toolkit": "^2.8.2",
    "classnames": "^2.5.1",
    "debounce": "^2.2.0",
    "json-templates": "^5.2.0",
    "motion": "^12.12.1",
    "next": "15.3.2",
    "react": "^19.1.0",
    "react-aria": "^3.39.0",
    "react-aria-components": "^1.8.0",
    "react-dom": "^19.1.0",
    "react-modal-sheet": "^4.4.0",
    "react-redux": "^9.2.0",
    "react-resizable-panels": "^3.0.2",
    "react-stately": "^3.37.0"
  },
  "devDependencies": {
    "@readium/css": "2.0.0-beta.13",
    "@svgr/webpack": "^8.1.0",
    "@types/css-modules": "^1.0.5",
    "@types/json-templates": "^3.0.3",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "esbuild-plugin-svgr": "^3.1.1",
    "eslint": "^9.27.0",
    "eslint-config-next": "15.3.2",
    "immer": "^10.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}